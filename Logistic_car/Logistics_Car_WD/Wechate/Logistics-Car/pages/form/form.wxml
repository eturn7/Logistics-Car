<!-- 表单 -->
<view class="forms">
  <view class="container">

    <view class="title">
      <text class="text">提交个人信息以生成个人识别码\n</text>
      <text class="text">快速生成个人码\n</text>
    </view>

      <view class="item">
        <text class="text"></text>
        <input type="text" value="{{area}}" bindinput="bindarea" class="weui-input" placeholder="请输入所在楼栋" placeholder-class="input-placeholder" />
      </view>

      <view class="item">
        <text class="text"></text>
        <input type="text"  value="{{name}}" bindinput="bindname" class="weui-input" placeholder="请输入您的姓名" placeholder-class="input-placeholder" />
      </view>

      <view class="item">
        <input type="text"  value="{{phone}}" bindinput="bindphone" class="weui-input" placeholder="请输入联系电话" placeholder-class="input-placeholder" />
      </view>

      <button class="submit" type="primary" bindtap="message_submit">
        <text>提交</text>
      </button>

        <text>欢迎使用智慧宿舍注册程序</text>
        <text>请仔细填写个人信息</text>
        <text>您的个人信息将被用于生成个人识别码</text>
  
      
  </view>
</view>
